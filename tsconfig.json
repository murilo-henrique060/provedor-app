{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@themes/*": [
        "./themes/*"
      ],
      "@contexts/*": [
        "./contexts/*"
      ],
      "@screens/*": [
        "./screens/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
